<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title"><%= title %></h4>

        <!-- <form method="post" action="/admin/<%= module_slug %>/update/<%= record.id %>" enctype="multipart/form-data"> -->
        <form method="post" action="/admin/<%= module_slug %>/update/<%= record.id %>" >

          <!-- Title & Price -->
          <div class="row">
            <div class="col-lg-6">
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= record.title %>" required>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" step="0.01" id="price" name="price" class="form-control" value="<%= record.price %>" required>
              </div>
            </div>
          </div>

          <!-- Features Section -->
          <div class="row">
            <div class="col-lg-12">
              <h5 class="mb-3">Features</h5>
              <div id="features-container">
                <% if (record.features && record.features.length > 0) { %>
                  <% record.features.forEach(function(feature, index) { %>
                    <div class="border rounded p-3 mb-3 feature-group">
                      <div class="row">
                        <div class="col-md-6">
                          <div class="mb-3">
                            <label for="feature-<%= index %>-title" class="form-label">Feature Title</label>
                            <input 
                              type="text" 
                              id="feature-<%= index %>-title" 
                              name="features[<%= index %>][title]" 
                              class="form-control" 
                              value="<%= feature.title %>" 
                              required
                            >
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="mb-3">
                            <label for="feature-<%= index %>-description" class="form-label">Feature Description</label>
                            <textarea 
                              id="feature-<%= index %>-description" 
                              name="features[<%= index %>][description]" 
                              class="form-control" 
                              rows="2"
                              required
                            ><%= feature.description %></textarea>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="alert alert-warning">No features found. Please add some.</div>
                <% } %>
              </div>

              <!-- Add Feature Button -->
              <button type="button" class="btn btn-outline-primary mt-2" id="add-feature-btn">+ Add Feature</button>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="row mt-4">
            <div class="col-lg-12 text-end">
              <button type="submit" class="btn btn-primary">Update Package</button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<!-- Feature Template (Hidden) -->
<template id="feature-template">
  <div class="border rounded p-3 mb-3 feature-group">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <label class="form-label">Feature Title</label>
          <input type="text" class="form-control feature-title" required>
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <label class="form-label">Feature Description</label>
          <textarea class="form-control feature-description" rows="2" required></textarea>
        </div>
      </div>
    </div>
  </div>
</template>

<!-- Add Feature Script -->
<script>
  const container = document.getElementById("features-container");
  const template = document.getElementById("feature-template");
  const addBtn = document.getElementById("add-feature-btn");

  addBtn.addEventListener("click", () => {
    const index = container.querySelectorAll(".feature-group").length;
    const clone = template.content.cloneNode(true);

    const titleInput = clone.querySelector(".feature-title");
    const descTextarea = clone.querySelector(".feature-description");

    titleInput.setAttribute("name", `features[${index}][title]`);
    titleInput.setAttribute("id", `feature-${index}-title`);

    descTextarea.setAttribute("name", `features[${index}][description]`);
    descTextarea.setAttribute("id", `feature-${index}-description`);

    container.appendChild(clone);
  });
</script>
