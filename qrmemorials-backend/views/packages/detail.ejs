<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Preview Package - <%= record.title %>
                </h4>

                <!-- Title and Price -->
                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" id="title" class="form-control" value="<%= record.title %>" readOnly>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" id="price" class="form-control" value="â‚¹<%= record.price %>" readOnly>
                        </div>
                    </div>
                </div>

                <!-- Features (Array of Features) -->
                <div class="row">
                    <div class="col-lg-12">
                        <h5 class="mb-3">Features</h5>
                        <% if (record.features.length> 0) { %>
                            <ol class="list-unstyled pl-3">
                                <% record.features.forEach(function(feature, index) { %>
                                    <li class="mb-2">
                                        <strong>
                                            <%= index + 1 %>. <%= feature.title %>:
                                        </strong>
                                        <%= feature.description %>
                                    </li>
                                    <% }); %>
                            </ol>
                            <% } else { %>
                                <p>No features available.</p>
                                <% } %>
                    </div>
                </div>




                <!-- Created At (Optional) -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label for="created_at" class="form-label">Created At</label>
                            <input type="text" id="created_at" class="form-control"
                                value="<%= new Date(record.created_at).toLocaleString() %>" readOnly>
                        </div>
                    </div>
                </div>

            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div> <!-- end row -->