<h1><%= title %></h1>

<a href="/admin/<%= module_slug %>/add" class="btn btn-success mb-3">Add Quiz</a>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Course</th>
      <th>Quiz Time (min)</th>
      <th>Total Questions</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (blogs && blogs.length > 0) { %>
      <% blogs.forEach((quiz, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= quiz.title %></td>
          <td><%= quiz.course_title %></td>
          <td><%= quiz.quiz_time %></td>
          <td>
            <a href="/admin/<%= module_slug %>/view/<%= quiz.id %>" class="btn btn-info btn-sm">View</a>
          </td>
          <td>
            <a href="/admin/<%= module_slug %>/edit/<%= quiz.id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/admin/<%= module_slug %>/delete/<%= quiz.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this quiz?')">Delete</a>
          </td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="6" class="text-center">No quizzes found.</td>
      </tr>
    <% } %>
  </tbody>
</table>
