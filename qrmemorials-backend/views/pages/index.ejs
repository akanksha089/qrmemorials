<h2>All Quizzes</h2>
<a href="/admin/quiz/create">Create New Quiz</a>

<table border="1" cellpadding="10">
  <thead>
    <tr>
      <th>ID</th>
      <th>Course ID</th>
      <th>Question</th>
      <th>Options</th>
      <th>Correct Answer</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% quizzes.forEach(quiz => { %>
      <tr>
        <td><%= quiz.id %></td>
        <td><%= quiz.course_id %></td>
        <td><%= quiz.question %></td>
        <td>
          <% JSON.parse(quiz.options).forEach(opt => { %>
            <div><%= opt %></div>
          <% }) %>
        </td>
        <td><%= quiz.correct_answer %></td>
        <td>
          <a href="/admin/quiz/edit/<%= quiz.id %>">Edit</a> |
          <a href="/admin/quiz/delete/<%= quiz.id %>" onclick="return confirm('Delete this quiz?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
